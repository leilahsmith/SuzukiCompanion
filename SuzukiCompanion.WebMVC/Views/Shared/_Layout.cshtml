<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Suzuki Companion</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="bs-component">


        <!--MUY IMPORTANTE-->

        <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
            <div class="container-fluid">
                <ul class="navbar-nav me-auto logo">
                    @Html.ActionLink("Suzuki Companion", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                </ul>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <span class="visually-hidden"></span>

                            @Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "nav-link" })
                        </li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">@Html.ActionLink("Lessons", "Index", "Lesson", new { area = "" }, new { @class = "nav-link" })</li>
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">@Html.ActionLink("Students", "Index", "Student", new { area = "" }, new { @class = "nav-link" })</li>
                                <li class="nav-item">@Html.ActionLink("Teachers", "Index", "Teacher", new { area = "" }, new { @class = "nav-link" })</li>
                            }
                        }
                        <li class="nav-item">@Html.ActionLink("About", "About", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                        <li class="nav-item">@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link" })</li>
                    </ul>
                    @Html.Partial("_LoginPartial")

                </div>
            </div>
        </nav>
    </div>



    @RenderBody()
    <hr />
    <footer>
        <p>&copy; @DateTime.Now.Year - Leilah's Music Studio, LLC</p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
