@model IEnumerable<SuzukiCompanion.Models.LessonListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Lessons</h2>

@if (User.Identity.IsAuthenticated)
{

    if (User.IsInRole("admin"))
    {
        <p>
            @Html.ActionLink("Create New", "Create")
        </p>
    }

}

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table homepage-body">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.LessonName)
        </th>

        @*<th>
            @Html.DisplayNameFor(model => model.CreatedUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ModifiedUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Contents)
        </th>*@
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LessonName)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.CreatedUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ModifiedUtc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Contents)
            </td>*@
        <td>
            @Html.ActionLink("Create", "Create", new { id = item.LessonId }, new { @class = "action-links" })
            @Html.ActionLink("Edit", "Edit", new { id = item.LessonId }, new { @class = "action-links" })
            @Html.ActionLink("Details", "Details", new { id = item.LessonId }, new { @class = "action-links" })
            @Html.ActionLink("Delete", "Delete", new { id = item.LessonId }, new { @class = "action-links" })
        </td>
        </tr>
    }
</table>
